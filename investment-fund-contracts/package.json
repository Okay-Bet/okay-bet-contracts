  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^5.0.0",
    "hardhat": "^2.19.0",
    "ethers": "^6.9.0",
    "chai": "^4.3.10",
    "solidity-coverage": "^0.8.5"
  },
  "keywords": ["solidity", "smart-contracts", "investment-fund"],
  "license": "MIT"
}